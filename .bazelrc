startup --batch --host_jvm_args=-Xmx1g --host_jvm_args=-XX:+UseG1GC

build --verbose_failures
build --worker_verbose --local_resources=400,2,1.0
build --strategy=Javac=worker --spawn_strategy=standalone --genrule_strategy=standalone
